<?xml version="1.0" encoding="utf-8" ?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Camiones.MainPage"
             BackgroundColor="#907BAB">

    <StackLayout VerticalOptions="Center">
        <Label Text="Inicio de sesión" HorizontalOptions="Center" FontSize="Title" />

        <Entry Placeholder="Correo electrónico" x:Name="emailEntry" />

        <Entry Placeholder="Contraseña" x:Name="passwordEntry" IsPassword="True" />

        <Button Text="Iniciar sesión" Clicked="Button_Clicked" CornerRadius="20"/>
    </StackLayout>

</ContentPage>
